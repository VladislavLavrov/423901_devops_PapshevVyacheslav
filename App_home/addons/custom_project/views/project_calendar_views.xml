<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Форма задачи — адаптация под металлургию -->
    <record id="view_task_form2_inherit" model="ir.ui.view">
        <field name="name">project.task.form.inherit.metallurgy</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="priority">16</field>
        <field name="arch" type="xml">
            <page name="extra_info" position="replace"/>

            <field name="project_id" position="attributes">
                <attribute name="string">Цех / Линия</attribute>
            </field>

            <field name="project_id" position="after">
                <field name="date_start" string="Дата начала" widget="datetime"/>
            </field>
        </field>
    </record>

    <!-- Действие: открыть форму планирования -->
    <record id="action_open_custom_task_form2" model="ir.actions.act_window">
        <field name="name">Планирование производства</field>
        <field name="res_model">project.task</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_task_form2_inherit"/>
        <field name="target">new</field>
    </record>

    <!-- Форма календаря — кнопки планирования -->
    <record id="view_task_calendar_form_my" model="ir.ui.view">
        <field name="name">project.task.calendar.form.metallurgy</field>
        <field name="model">project.task</field>
        <field name="priority">1</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Планирование производства">
                <field name="company_id" invisible="1"/>
                <header>
                    <button name="fill_month_schedule" string="Основной цикл" type="object" context="{'main': True}"/>
                    <button name="fill_month_schedule" string="Техническое обслуживание" type="object" context="{'main': False}"/>
                    <button name="action_delete_series" string="Удалить всю серию" type="object"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="date_start" string="Дата начала"/>
                            <field name="project_id" string="Цех / Линия"/>
                            <field name="from_cycle_number" string="Начать с цикла"/>
                            <field name="cycle_numbers" string="Количество циклов"/>
                            <field name="production_days" string="Дни непрерывного производства"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Календарь задач -->
    <record id="view_task_calendar_custom" model="ir.ui.view">
        <field name="name">project.task.calendar.custom.metallurgy</field>
        <field name="model">project.task</field>
        <field name="type">calendar</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <calendar
                string="Производственные задачи"
                date_start="date_start"
                date_stop="date_deadline"
                color="shift_color"
                event_limit="5"
                quick_add="false"
                event_open_popup="true"
                mode="month"
                js_class="custom_project_calendar_create_series">

                <field name="date_start"/>
                <field name="project_id"/>
                <field name="production_cycle"/>
                <field name="user_ids"/>
                <field name="priority"/>
                <field name="stage_id"/>
                <field name="date_deadline"/>
                <field name="shift_type" invisible="1"/>
            </calendar>
        </field>
    </record>

    <!-- Дополнительно: если нужно — добавляем ответственного на стадию проекта -->
    <record id="project_project_project_stage_view_form_inherited" model="ir.ui.view">
        <field name="name">project.project.stage.inherited.metallurgy</field>
        <field name="model">project.project.stage</field>
        <field name="inherit_id" ref="project.project_project_stage_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='sequence']" position="after">
                <field name="user_id" string="Ответственный за цех" />
            </xpath>
        </field>
    </record>

</odoo>