<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Стадия: Запланировано -->
    <record id="project_task_stage_planned" model="project.task.type">
        <field name="name">Запланировано</field>
        <field name="description">Работа запланирована, но ещё не начата</field>
        <field name="sequence" eval="10"/>
        <field name="fold" eval="False"/>
    </record>

    <!-- Стадия: В работе -->
    <record id="project_task_stage_in_progress" model="project.task.type">
        <field name="name">В работе</field>
        <field name="description">Работа выполняется</field>
        <field name="sequence" eval="20"/>
        <field name="fold" eval="False"/>
    </record>

    <!-- Стадия: Завершено -->
    <record id="project_task_stage_completed" model="project.task.type">
        <field name="name">Завершено</field>
        <field name="description">Работа полностью выполнена</field>
        <field name="sequence" eval="100"/>
        <field name="fold" eval="True"/>
    </record>
</odoo>